<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Searchbox Theme -->
    <style name="SearchBox">
        <item name="boxBackgroundColor">@color/primaryLightColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="startIconDrawable">@drawable/ic_search_drawable</item>
        <item name="startIconTint">@color/primaryTextColor</item>
        <item name="hintEnabled">false</item>
    </style>

    <!-- Dialog Style -->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_corner_top_rounded</item>
    </style>
</resources>